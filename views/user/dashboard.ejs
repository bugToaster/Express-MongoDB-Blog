<%- include('../partials/header'); -%>

<div class="container-fluid">
    <div class="row mt-3">
        <h2>Dashboard</h2>
    </div>

    <div class="row">
        <p>
            <b>Name: </b> <%= user.name %>
            <br>
            <br>

            <b>ID: </b> <%= user._id %>
            <br>
            <br>
            <b> Email: </b> <%= user.email %>
        </p>
    </div>


    <div class="row my-5">

        <h3>My Articles</h3>
        <% if (!articles || articles.length === 0) { %>
            <h5>No articles yet.</h5>
        <% } else if (Array.isArray(articles)) { %>
            <% articles.forEach((article, index) => { %>
            <div class="col-md-4 mb-5">
                <h3> <%= index+1 %>) <%= article.title %></h3>
                <p><%= article.content %></p>
                <a href="/article-details/<%= article._id %>">Read More</a>
            </div>
            <% }); %>
        <% } %>

    </div>


</div>


<%- include('../partials/footer'); -%>
